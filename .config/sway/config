#
# Multimedia keys
#

    bindsym --locked XF86AudioRaiseVolume exec pactl set-sink-volume @DEFAULT_SINK@ +5%
    bindsym --locked XF86AudioLowerVolume exec pactl set-sink-volume @DEFAULT_SINK@ -5%
    bindsym --locked XF86AudioMute exec pactl set-sink-mute @DEFAULT_SINK@ toggle
    #bindsym XF86AudioMicMute exec pactl set-source-mute @DEFAULT_SOURCE@ toggle

# Personal settings
gaps inner 5
default_border pixel 6
font JetBrains Mono

# Basic color configuration using the Base16 variables for windows and borders.
# Property Name         Border  BG      Text    Indicator Child Border
include colorscheme
client.focused          $base0F $base07 $base00 $base0F $base0F
client.focused_inactive $base01 $base0F $base05 $base03 $base01
client.unfocused        $base01 $base0D $base05 $base01 $base01
client.urgent           $base08 $base08 $base00 $base08 $base08
#client.placeholder      $base00 $base00 $base05 $base00 $base00
#client.background       $base07

# Screenshots:
# Super+P: Current window
# Super+Shift+p: Select area
# Super+Alt+p Current output
# Super+Ctrl+p Select a window

bindsym Mod4+p       exec grimshot --notify save active
bindsym Mod4+Shift+p exec grimshot --notify save area
bindsym Mod4+Mod1+p  exec grimshot --notify save output
bindsym Mod4+Ctrl+p  exec grimshot --notify save window

#Programs to execute at startup
exec_always {
    gsettings set $gnome-schema gtk-theme 'Adapta-Nokto'
#    autotiling
    wmname LG3D
    dropbox
    mako
}

bar {
    position top
    swaybar_command waybar
}

# Initially enable numlock
input * xkb_numlock enable

include /etc/sway/config.d/*
